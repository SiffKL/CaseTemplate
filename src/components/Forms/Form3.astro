---
import Pbuttons from "../globalcomponents/Pbuttons.astro";
import Finput from "../globalcomponents/Finput.astro";
import ProgIndicator3 from "./Progressbar/ProgIndicator3.astro";
import Paybutton from "../globalcomponents/Paybutton.astro";
---

<section class="container">
  <h1>
    Bliv en <span class="pc-text">Plastic Changer</span> i dag og kæmp i <span
      class="fs-text">Fællesskab</span
    >
  </h1>
  <ProgIndicator3 />
  <form>
    <!-- Donation Type -->
    <div class="form-group">
      <Paybutton />
    </div>
    <div class="form-group">
      <label>Kortnummer</label>
      <Finput placeholder="XXXX-XXXX-XXXX-XXXX" inputSize="100%" />
    </div>
    <div class="halfhalf">
      <div class="form-group">
        <label>Udløbsdato</label>
        <Finput placeholder="År/Måned" inputSize="80%" />
      </div>
      <div class="form-group">
        <label>Kontrolsifre</label>
        <Finput placeholder="F.eks 121" inputSize="60%" />
      </div>
    </div>

    <!-- Submit -->
    <div class="form-group">
      <Pbuttons title="Videre til order" size="forms" />
      <p class="underknap">
        Husk! Du kan også selv indtaste dit <span class="skattefradrag"
          >skattefradrag</span
        > når du intaster din selvangivelse hos skat.
      </p>
      <a href="#">Læs mere her</a>
    </div>
  </form>
</section>

<style>
  .container {
    max-width: 450px;
    margin: 20px auto;
    padding: 30px 44px;
    background: var(--color-complimentary-pine-green-lightest, #d3e2e2);
    border-radius: 5px;
    text-align: left;
  }

  .halfhalf {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }


  .inputs {
    color: var(--color-secondary-graphite-dark, #1c1e23);
    font-family: Rubik;
    font-size: 12px;
    font-style: normal;
    font-weight: 300;
    line-height: 40px;
  }

  .underknap {
    color: var(--color-complimentary-pine-green-medium, #2a5f5e);
    /* Paragraph12Normal */
    font-family: Rubik;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px; /* 166.667% */
  }

  .skattefradrag {
    color: var(--color-complimentary-pine-green-medium, #2a5f5e);
    font-family: Rubik;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 20px;
  }

  h1,
  p,
  form label,
  a {
    font-family: Rubik;
  }

  h1 {
    color: #000;
    font-size: 32px;
    font-weight: 400;
    line-height: 1.3;
  }

  .pc-text {
    color: var(--color-complimentary-pine-green-medium, #2a5f5e);
    font-weight: 800;
  }
  .fs-text {
    color: var(--color-complimentary-pine-green-dark, #142c2b);
    font-weight: 800;
  }

  p {
    color: var(--color-complimentary-pine-green-normal, #007c79);
    font-size: 16px;
    font-weight: 400;
  }

  form {
    padding-top: 16px;
    padding-left: 44px;
    padding-right: 44px;
    padding-bottom: 30px;
    color: var(--color-secondary-graphite-dark, #1c1e23);
    font-size: 13px;
    font-weight: 800;
  }

  .form-group {
    display: grid;
    margin-top: 24px;
  }

  .inline {
    display: flex;
    justify-content: space-between;
  }

  a {
    color: #3498db;
    text-decoration: none;
    font-size: 13px;
  }

  a:hover {
    text-decoration: underline;
  }

  .highlighted {
    background: #357a79;
    color: #fff;
  }
</style>
