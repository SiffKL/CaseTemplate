  </section>
</section>

<style>
  .homepagesection2 {
    background-image: url("src/asset/svgimages/WavesPage1.svg");
    background-size: cover;

    background-repeat: no-repeat;
    display: flex;
    width: 100vw;
    height: 85rem;
    padding: var(--spacing-text-padding-vertical, 2rem)
      var(--spacing-text-padding-horizontal, 3rem);
    align-items: center;
    align-content: center;
    gap: var(--spacing-text-gap-vertical, 2rem) -8.5625rem;
    flex-wrap: wrap;
  }
  .headersection {
    display: flex;
    width: 50rem;
    height: fit-content;
    padding: var(--spacing-text-padding-vertical, 2rem)
      var(--spacing-text-padding-horizontal, 3rem);
    align-items: center;
    align-content: center;
    gap: var(--spacing-text-gap-vertical, 2rem);
    flex-wrap: wrap;
  }

  .fiveprincipshort {
    /* display: flex; */
    /* width: fit-content; */
    height: fit-content;
    padding: var(--spacing-text-padding-vertical, 2rem)
      var(--spacing-text-padding-horizontal, 3rem);
    flex-direction: column;
    align-items: flex-start;
    /* gap: var(--spacing-section-element-gap, 5rem); */
    /* flex-shrink: 0; */
  }

  .intro {
    width: 30rem;
    color: var(--color-complimentary-pine-green-dark, #142c2b);
    font-family: Rubik;
    font-size: 1rem;
    font-style: normal;
    font-weight: 700;
    line-height: 150.5%; /* 1.505rem */
  }
  div {
    display: flex;
    width: 30.375rem;
    height: 4.9375rem;
    align-items: last baseline;
    gap: 1.5625rem;
    flex-shrink: 0;
  }
  p {
    width: auto;
    align-items: flex-start;
    gap: 1.5625rem;
    /* flex-shrink: 0; */
  }

  h2 {
    line-height: 9rem;
  }
  h1 {
    color: var(--text-header-highlight-color, #e72458);
    /* Header1 */
    font-family: Poppins;
    font-size: 5rem;
    font-style: normal;
    font-weight: 700;
    line-height: 5rem;
    margin: 0;
  }
  p {
    color: var(--text-paragraph-color-pine-green-medium, #2a5f5e);
    /* Header4-Bold */
    font-family: Poppins;
    font-size: 2rem;
    font-style: normal;
    font-weight: 700;
    line-height: 150%; /* 3rem */
  }

  h2 {
    color: var(--text-paragraph-graphitedark, #1c1e23);
    font-family: Poppins;
    font-size: 3rem;
    font-style: normal;
    font-weight: 900;
    line-height: 2rem;
    margin: 0;
  }
  .centercontent {
    display: flex;
    width: 100vw;
    justify-content: center;
    align-items: center;
  }

  .punkt {
    color: var(--text-paragraph-color-pinegreen-dark, #142c2b);
    text-align: center;
    font-family: Poppins;
    font-size: 3.875rem;
    font-style: normal;
    font-weight: 900;
    line-height: normal;
  }

  .no-style {
    list-style: none;
    text-decoration: none;
    text-decoration-line: none;
  }
  @media only screen and (max-width: 900px) {
    .homepagesection2 {
      background-image: url("src/asset/svgimages/WavesPage1.svg");
      background-size: cover;
      background-repeat: no-repeat;
      padding: 2rem;
      gap: 2rem;
      height: 1400px;
    }
    .headersection {
      width: 100%;
      /* text-align: center; */
      padding: 2rem 1rem;
    }

    .fiveprincipshort {
      width: 100%;
      padding: 1rem;
    }

    .intro,
    p {
      width: auto;
      color: #142c2b;
      font-size: 16px;
      line-height: 1.5;
    }

    h1 {
      color: #e72458;
      font-size: 3rem;
      line-height: 1.2;
    }
    h2 {
      color: #1c1e23;
      font-size: 2rem;
      line-height: 1.2;
    }
    .centercontent {
      width: 100%;
      justify-content: center;
    }

    .punkt {
      font-size: 2.5rem;
    }

    div {
      width: 100%;
      height: auto;
      align-items: baseline;
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
