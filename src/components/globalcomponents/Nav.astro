<section>
  <div class="nav">
    <a href="/"><img src="src/asset/icons/logo.svg" alt="" /></a>

    <div class="burger-menu">☰</div>
    <div class="close-icon">✕</div>

    <ul class="tracking-in-expand-fwd-top">
      <li>
        <a class="basiclink" href="/defemprincipper">De 5 Principper</a>
      </li>
      <li>
        <a class="basiclink" href="/hvorforgenbrug">Hvorfor Genbrug?</a>
      </li>
      <li>
        <a class="pinklink" href="/forms">Bliv en Plastic Changer</a>
      </li>
    </ul>
  </div>
</section>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    margin: 0;
    display: flex;
    padding: var(--nav-padding-vertical, 0rem)
      var(--nav-padding-horizontal, 3.5rem);
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
    z-index: 1000; /* Set a high z-index value */
  }

  a {
    text-decoration: none;
  }
  .basiclink {
    text-decoration: none;
    color: var(--link-color-default, --color-secondary-graphite-dark);
    /* color: var(--color-secondary-graphite-dark: #1c1e23); */
  }
  .basiclink:hover {
    color: var(
      --button-primary-default-text-color,
      --color-primary-cerise-red-normal
    );
    text-decoration: underline;
  }

  .basiclink:active {
    color: var(
      --button-primary-default-text-color,
      --color-secondary-graphite-dark
    );
    text-decoration: underline;
  }
  ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 3.4375rem;
  }

  .pinklink {
    text-decoration: underline;
    color: var(--text-header-highlight-color, #e72458);
  }

  .pinklink:hover {
    color: var(--text-paragraph-graphitedark, #1c1e23);
    text-decoration: underline;
  }

  .pinklink:active {
    color: var(--text-header-highlight-color, #e72458);

    text-decoration: underline;
  }

  li {
    font-family: "Rubik", sans-serif;
  }

  /* ----------- ama herfra ----------- */

  section {
    margin: 0;
    padding: 0;
  }
  .burger-menu {
    display: none;
    cursor: pointer;
    font-size: 2.60444rem;
    color: var(--text-paragraph-color-pine-green-medium, #2a5f5e);
  }

  .close-icon {
    display: none;
    cursor: pointer;
    font-size: 2.60444rem;
    /* transition: height 300ms linear; */
    color: var(--text-paragraph-color-pine-green-medium, #2a5f5e);
  }

  @media (max-width: 1200px) {
    .nav {
      position: fixed;
      top: 0;
      left: 0;
      height: 2.60444rem;
      width: 100%;
      margin: 0;
      padding: var(--nav-padding-vertical, 0rem)
        var(--nav-padding-horizontal, 3.5rem);
      display: flex;
      justify-content: space-between;
      background: var(--Color-Secondary-white-blush, rgba(255, 255, 255, 0.6));
      z-index: 1000;
    }

    .burger-menu {
      display: block;
      transition: opacity 0.3s ease;
    }

    .close-icon {
      display: none;
    }

    .nav img {
      width: 8.93525rem;
      height: 2.60444rem;
    }

    .nav ul {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      right: 0;
      background: var(--color-complimentary-pine-green-light, #90b7b6);
      z-index: 1000;
      opacity: 0;
      /* transition: opacity 0.3s ease; */
    }

    .nav.open {
      background: var(--color-complimentary-pine-green-light, #90b7b6);
    }

    .nav.open ul {
      display: flex;
      top: 100%;
      opacity: 1;
    }

    .nav.open .burger-menu {
      display: none;
    }

    .nav.open .close-icon {
      display: block;
    }
  }

  .nav.open {
    background: var(--color-complimentary-pine-green-light, #90b7b6);
    /* transition: height 300ms linear; */
  }

  .nav.open ul {
    display: flex;
    top: 100%;
    padding: 3rem;
  }

  .nav.open .burger-menu {
    display: none;
  }

  .nav.open .close-icon {
    display: block;
    /* transition: height 300ms linear; */
  }

  /* ----- animista from here -------- */

  .tracking-in-expand-fwd-top {
    -webkit-animation: tracking-in-expand-fwd-top 0.8s
      cubic-bezier(0.215, 0.61, 0.355, 1) both;
    animation: tracking-in-expand-fwd-top 0.8s
      cubic-bezier(0.215, 0.61, 0.355, 1) both;
  }

  /**
 * ----------------------------------------
 * animation tracking-in-expand-fwd-top
 * ----------------------------------------
 */
  @-webkit-keyframes tracking-in-expand-fwd-top {
    0% {
      letter-spacing: -0.5em;
      -webkit-transform: translateZ(-700px) translateY(-500px);
      transform: translateZ(-700px) translateY(-500px);
      opacity: 0;
    }
    40% {
      opacity: 0.6;
    }
    100% {
      -webkit-transform: translateZ(0) translateY(0);
      transform: translateZ(0) translateY(0);
      opacity: 1;
    }
  }
  @keyframes tracking-in-expand-fwd-top {
    0% {
      letter-spacing: -0.5em;
      -webkit-transform: translateZ(-700px) translateY(-500px);
      transform: translateZ(-700px) translateY(-500px);
      opacity: 0;
    }
    40% {
      opacity: 0.6;
    }
    100% {
      -webkit-transform: translateZ(0) translateY(0);
      transform: translateZ(0) translateY(0);
      opacity: 1;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const nav = document.querySelector(".nav");
    const burgerMenu = document.querySelector(".burger-menu");
    const closeIcon = document.querySelector(".close-icon");
    const menuList = document.querySelector(".nav ul");

    burgerMenu.addEventListener("click", function () {
      nav.classList.toggle("open");
    });

    closeIcon.addEventListener("click", function () {
      nav.classList.remove("open");
    });
  });
</script>
