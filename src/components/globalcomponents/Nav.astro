<style>
  .nav {
    margin: 0rem;
    display: flex;
    padding: var(--nav-padding-vertical, 0rem)
      var(--nav-padding-horizontal, 3.5rem);
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
  }

  a {
    text-decoration: none;
  }
  .basiclink {
    text-decoration: none;
    color: var(--link-color-default, --color-secondary-graphite-dark);
    /* color: var(--color-secondary-graphite-dark: #1c1e23); */
  }
  .basiclink:hover {
    color: var(
      --button-primary-default-text-color,
      --color-primary-cerise-red-normal
    );
    text-decoration: underline;
  }

  .basiclink:active {
    color: var(
      --button-primary-default-text-color,
      --color-secondary-graphite-dark
    );
    text-decoration: underline;
  }
  ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 3.4375rem;
  }

  .pinklink {
    text-decoration: underline;
    color: var(--text-header-highlight-color, #e72458);
  }

  .pinklink:hover {
    color: var(--text-paragraph-graphitedark, #1c1e23);
    text-decoration: underline;
  }

  .pinklink:active {
    color: var(--text-header-highlight-color, #e72458);

    text-decoration: underline;
  }

  li {
    /* Paragraph20Medium */
    font-family: "Rubik", sans-serif;
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 150%; /* 1.875rem */
  }

  /* ----------- ama herfra ----------- */

  section {
    margin: 0;
    padding: 0;
  }
  .burger-menu {
    display: none;
    cursor: pointer;
    font-size: 1.5rem;
    margin-left: 10px;
  }

  .close-icon {
    display: none;
    cursor: pointer;
    font-size: 1.5rem;
    margin-left: 10px;
  }

  @media (max-width: 1200px) {
    .burger-menu {
      display: block;
      /* order: 3;  */
    }

    .close-icon {
      display: none;
      /* order: 3;  */
    }

    .nav {
      margin: 0rem;
      display: flex;
      padding: var(--nav-padding-vertical, 0rem)
        var(--nav-padding-horizontal, 3.5rem);
      justify-content: space-between;
      align-items: center;
      background-color: transparent;
    }

    .nav img {
      width: 8.93525rem;
      height: 2.60444rem;
      /* order: 1;  */
    }

    .nav ul {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      top: 70px;
      right: 0;
      background-color: var(--color-secondary-white, #fff);
      z-index: 10;
    }

    .nav.open ul {
      display: flex;
    }

    .nav.open .burger-menu {
      display: none;
    }

    .nav.open .close-icon {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const nav = document.querySelector(".nav");
    const burgerMenu = document.querySelector(".burger-menu");
    const closeIcon = document.querySelector(".close-icon");
    const menuList = document.querySelector(".nav ul");

    burgerMenu.addEventListener("click", function () {
      nav.classList.toggle("open");
    });

    closeIcon.addEventListener("click", function () {
      nav.classList.remove("open");
    });
  });
</script>
